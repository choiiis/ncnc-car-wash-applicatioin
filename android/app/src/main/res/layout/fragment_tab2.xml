<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.Tab2.Tab2Fragment"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="328dp"
        android:layout_height="300dp"
        tools:context=".fragment.tab_2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/home_tap2_box">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="주소 검색"
                android:textColor="@color/color_black"
                android:textSize="15sp"
                android:fontFamily="@font/ns_bold"/>

            <RadioGroup
                android:id="@+id/home_tab2_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/home_tab2_mylocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 위치로 설정하기"
                    android:textColor="@color/color_black"
                    android:textSize="13sp"
                    android:fontFamily="@font/ns_regular"/>

                <RadioButton
                    android:id="@+id/home_tab2_locationsetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="직접 설정하기"
                    android:textColor="@color/color_black"
                    android:textSize="13sp"
                    android:fontFamily="@font/ns_regular"/>
            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/home_tab2_spinner_location1"
                    android:layout_width="85dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="14dp"
                    android:visibility="invisible"
                    android:spinnerMode="dropdown"/>

                <Spinner
                    android:id="@+id/home_tab2_spinner_location2"
                    android:layout_width="85dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="14dp"
                    android:visibility="invisible"
                    android:spinnerMode="dropdown"/>

                <Spinner
                    android:id="@+id/home_tab2_spinner_location3"
                    android:layout_width="85dp"
                    android:layout_height="30dp"
                    android:visibility="invisible"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="추가 정보 선택"
                android:textColor="@color/color_black"
                android:textSize="15sp"
                android:fontFamily="@font/ns_bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <CheckBox
                    android:id="@+id/home_tab2_vistingtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="방문 시각"
                    android:textColor="@color/color_black"
                    android:textSize="13sp"
                    android:fontFamily="@font/ns_regular"
                    android:layout_gravity="center" />

                <Spinner
                    android:id="@+id/home_tab2_spinner_visitingtime1"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:dropDownWidth="80dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginRight="5dp"
                    android:visibility="invisible" />
                <Spinner
                    android:id="@+id/home_tab2_spinner_visitingtime2"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:dropDownWidth="100dp"
                    android:spinnerMode="dropdown"
                    android:visibility="invisible" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/home_tab2_kindofnewcar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="세차 종류"
                android:textColor="@color/color_black"
                android:textSize="13sp"
                android:fontFamily="@font/ns_regular"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center_horizontal">
                <CheckBox
                    android:id="@+id/checkbox_newcar1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="셀프 세차"
                    android:textSize="11sp"
                    android:fontFamily="@font/ns_regular"
                    android:button="@null"
                    android:drawableTop="@drawable/home_tab2_color1"
                    android:gravity="center"
                    android:textColor="@drawable/home_tab2_color1"
                    android:visibility="invisible"/>
                <CheckBox
                    android:id="@+id/checkbox_newcar2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="자동 세차"
                    android:textSize="11sp"
                    android:fontFamily="@font/ns_regular"
                    android:button="@null"
                    android:drawableTop="@drawable/home_tab2_color2"
                    android:gravity="center"
                    android:textColor="@drawable/home_tab2_color2"
                    android:visibility="invisible"/>
                <CheckBox
                    android:id="@+id/checkbox_newcar3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:text="디테일링"
                    android:textSize="11sp"
                    android:fontFamily="@font/ns_regular"
                    android:button="@null"
                    android:drawableTop="@drawable/home_tab2_color3"
                    android:gravity="center"
                    android:textColor="@drawable/home_tab2_color3"
                    android:visibility="invisible"/>
                <CheckBox
                    android:id="@+id/checkbox_newcar4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="실내 세차"
                    android:textSize="11sp"
                    android:fontFamily="@font/ns_regular"
                    android:button="@null"
                    android:drawableTop="@drawable/home_tab2_color4"
                    android:gravity="center"
                    android:textColor="@drawable/home_tab2_color4"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <ImageButton
        android:id="@+id/home_tab2_searchbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_tap2_searchbutton"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"/>

</LinearLayout>