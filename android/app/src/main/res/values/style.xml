<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <item name="colorAccent">@color/color_main</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/color_white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:fontFamily">@font/ns_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="android:fontFamily">@font/ns_regular</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/color_star_blank</item>
        <item name="colorControlActivated">@color/color_star_gold</item>
    </style>

    <style name="RatingBar_map" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/color_star_map_blank</item>
        <item name="colorControlActivated">@color/color_star_gold</item>
    </style>
</resources>